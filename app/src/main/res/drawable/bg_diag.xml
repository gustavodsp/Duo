    <item>
        <shape>
            <gradient
                android:angle="0"
                android:startColor="#EC6F66"
                android:endColor="#F3A183"
                android:type="linear" />
        </shape>
    </item>

    <item android:id="@+id/diagonal_bg"
        android:top="230dp"
        android:bottom="-230dp"
        android:left="0dp"
        android:right="-230dp">
        <rotate
            android:fromDegrees="-10"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="@android:color/white"/>
            </shape>
        </rotate>
    </item>
</layer-list>